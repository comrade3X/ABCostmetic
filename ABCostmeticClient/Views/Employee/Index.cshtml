@model IEnumerable<ABCostmeticClient.Models.Employee>
@{
    ViewBag.Title = "Index";
}
<h2>Employee list:</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Store</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Address</th>
            <th>Date Of Birth</th>
            <th>Identity Card</th>
            <th>Phone</th>
            <th>National</th>
        </tr>
    </thead>
    @{
        foreach (var empl in Model)
        {
            <tr>
                <td>@empl.Id</td>
                <td>
                    <a href="@Url.Action("Detail","Employee",new{id=empl.Id})">@empl.FullName</a>
                </td>
                <td>@empl.StaffType.Type</td>
                <td>@empl.Store.Id</td>
                <td>@empl.Gender</td>
                <td>@empl.Email</td>
                <td>@empl.Address</td>
                <td>@empl.DateOfBirth</td>
                <td>@empl.IdentityCard</td>
                <td>@empl.Phone</td>
                <td>@(empl.Nationality1.Name + empl.Nationality1.ZipCode)</td>
            </tr>
        }
    }
</table>

